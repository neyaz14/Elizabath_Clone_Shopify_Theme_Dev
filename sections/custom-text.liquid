<section class="py-12 text-center">
  <h2 class="text-3xl font-bold">{{ settings.heading }}</h2>
  <p class="mt-2 text-gray-700">{{ settings.text }}</p>
</section>

{% schema %}
{
  "name": "Custom Text Block",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Title Here"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text Content",
      "default": "This is a short paragraph about your store or mission."
    }
  ],
  "presets": [
    {
      "name": "Text Block"
    }
  ]
}
{% endschema %}
